<html lang="en">
<head>
        <%- include('./partials/head.ejs') %>
        <link href="/css/register.css" rel="stylesheet" type="text/css">
        <title>Registrarse</title>
</head>
<body>
    <!-- Header -->
    <%- include('./partials/header.ejs')%>
    <main class="main-login">
        <div class="login">
            <h1>Editar Usuario</h1>
            <form action="/users/userEdit/<%=userInfo.userID%>?_method=PUT" method="post" enctype="multipart/form-data">
                <p>
                    <label for="nombre">Nombre</label>   
                    <input type="text" name="userName" placeholder="" required 
                    id="nombre" value="<%=userInfo.userName%>">
                </p>
                <p>
                    <label for="apellido">Apellido</label>   
                    <input type="text" name="userLastN" placeholder="" required 
                    id="apellido" value="<%=userInfo.userLastN%>">
                </p>
                <p>
                    <label for="email">Email</label>   
                    <input type="email" name="userEmail" placeholder="" required 
                    id="email" value="<%=userInfo.userEmail%>">
                </p>
                <p>
                    <label for="password">Contraseña</label>
                    <input type="password" name="userPass" placeholder="" id="contraseña" value="<%=userInfo.userPass%>" required>
                </p>
                <p>
                    <label for="category">Categoria:</label>
                    <select name="userCategory" id="category" value="<%=userInfo.userCategory%>" required>
                        <option value="User">Usuario</option>
                        <option value="Admin">Admin</option>
                    </select>
                </p>
                <p>
                    <label>Subir Imagen</label>
                    <input type="file" name="userImage" required>
                </p>
                
                <button type="submit">Confirmar</button>
                <a href="./profile">
                <button>Volver</button>
            </a>
            </form>
        </div>
    </main>
    <%- include('./partials/footer.ejs') %>
</body>
</html>