<html lang="en">
    <!-- Head -->
    <head>
        <%- include('./partials/head.ejs') %>
        <link href="/css/login.css" rel="stylesheet" type="text/css">
        <link href="/css/register.css" rel="stylesheet" type="text/css">
        <title>Iniciar Sesion</title>
    </head>
<body>
    <!-- Header -->
    <%- include('./partials/header.ejs')%>
    <main class="main-login">
        <div class="login">
            <h1>Iniciar Sesion</h1>
            <form action="/users/login" method="post">
                <div>
                 <label for="usuario">Correo electronico</label>   
                 <input type="text" name="userEmail" placeholder="" required class="username">
                <span></span>
                <% if (locals.errors && errors.userEmail){ %>
                    <div class="text-error">
                        <%= errors.userEmail.msg %>
                    </div>
              <%  } %> 
            </div>
            <div>
                <label for="password">Contraseña</label>
                <input type="password" name="userPass" placeholder="" class="contraseña">
                <span></span>   
            </div>
            <div>
                <input type="submit" value="Iniciar Sesion" id="enviar">
            </div>
            <label>
                <input type="checkbox" class="form-check-input" name="remember_user">Recordar mi usuario
            </label>     
            <!-- <a href="#">¿Olvidaste tu contraseña?</a> -->
            <a href="/users/register">¿No tienes cuenta aún?</a>
            </form>
        </div>
    </main>
    <%- include('./partials/footer.ejs') %>
    <script type="text/javascript" src="/js/loginValidation.js"> </script>
</body>
</html>