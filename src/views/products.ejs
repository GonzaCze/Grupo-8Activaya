<html lang="en">
     <!-- Head -->
     <head>
        <%- include('./partials/head.ejs') %>
        <link href="/css/creacion.css" rel="stylesheet" type="text/css">
        <title>Marcas</title>
    </head> 
    <body>
    <!-- Header -->
    <%- include('./partials/header.ejs')%>
    <body>
        <section class="main-section">
          <div class="slider">
              <ul>
              
              <li><img src="/img/Slider-3-Cuotas.png" alt=""></li>
              <li><img src="/img/Slider-Heineken.png" alt=""></li>
              <li><img src="/img/SaltaCautiva-slider.png" alt=""></li>
              <li><img src="/img/Schneider-slider.png" alt=""></li>
              <!-- <li><img src="/img/slider-JWalker.png" alt=""></li> -->
              </ul>
          </div>
        </section>
        <main class="main-products">
          <div class="products-container">
            <h1>Cervezas Premium</h1>
            <section class="products">
              <% for (let i = 0; i<products.length ; i++) { %>
               <div class="main-article">
                <a href="/detalle/<%= products[i].pdtID%>">
                  <img src="/uploads/products/<%=products[i].pdtImage %>"  alt="" class="product-img">
                </a>
                <div class="product-description">
                  <h3 class="product-title"><%= products[i].pdtName %></h3>
                  <span class="price">$ <%= products[0].pdtPrice %></span>
                </div>
              </div>
              <%}%>
              
            </section>
          </div>
        </main>
        <main class="main-products">
          <div class="products-container">
            <h1>Cervezas Rubias</h1>
            <section class="products">
              <div class="main-article">
                <img src="/img/Antares-Barleywine.png" alt="" class="product-img">
                <div class="product-description">
                  <h3 class="product-title">Barley Wine</h3>
                  <span class="price">$230</span>
                </div>
              </div>
              <div class="main-article">
                <img src="/img/heineken-original-bottle.png" alt="" class="product-img">
                <div class="product-description">
                  <h3 class="product-title">Heineken</h3>
                  <span class="price">$230</span>
                </div>
              </div>
              <div class="main-article">
                <img src="/img/Miller-Lata.png" alt="" class="product-img">
                <div class="product-description">
                  <h3 class="product-title">Miller Lata</h3>
                  <span class="price">$230</span>
                </div>
              </div>
              <div class="main-article">
                <img src="/img/Corona-710.png" alt="" class="product-img">
                <div class="product-description">
                  <h3 class="product-title">Corona 710</h3>
                  <span class="price">$230</span>
                </div>
              </div>
              <div class="main-article">
                <img src="/img/Antares-imperialStaut.png" alt="" class="product-img">
                <div class="product-description">
                  <h3 class="product-title">Imperial Staut</h3>
                  <span class="price">$230</span>
                </div>
              </div>
              <div class="main-article">
                <img src="/img/Quilmes.png" alt="" class="product-img">
                <div class="product-description">
                  <h3 class="product-title">Quilmes</h3>
                  <span class="price">$230</span>
                </div>
              </div>
              <div class="main-article">
                <img src="/img/Antares-Catalina.png" alt="" class="product-img">
                <div class="product-description">
                  <h3 class="product-title">Catalina la Grande</h3>
                  <span class="price">$230</span>
                </div>       
              </div>
              <div class="main-article">
                <img src="/img/Antares_HoneyBeer.png" alt="" class="product-img">
                <div class="product-description">
                  <h3 class="product-title">Honey Beer</h3>
                  <span class="price">$230</span>
                </div>       
              </div>
            </section>
            </div>
            
        </main>
        </body>

    </body>     
</body>
</html>